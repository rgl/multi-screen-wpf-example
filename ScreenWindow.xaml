<Window x:Class="MultiScreenWpf.ScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiScreenWpf"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowActivated="False"
        Topmost="True"
        Foreground="#007acc"
        Background="#1e1e1e"
        Top="0"
        Left="0"
        Width="240"
        Height="140">
    <StackPanel VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontSize="32" Text="{Binding ScreenDeviceName}"/>
        <TextBlock HorizontalAlignment="Center" FontSize="32">
            <TextBlock Text="{Binding ScreenBounds.Width}"/>x<TextBlock Text="{Binding ScreenBounds.Height}"/>
        </TextBlock>
    </StackPanel>
</Window>
